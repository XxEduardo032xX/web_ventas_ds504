@model IEnumerable<web_ventas_ds504.Models.Autor>

@{
     ViewData["Title"] = "Index";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de Autores</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Autor"
               asp-action="Create"><i class="fas fa-plus-circle"></i> Agregar Autor</a>
        </div>
    </div>

    <br />

    <div class="row">
        @if (Model.Count() > 0)
        {
           <table class="table table-striped">
               <thead>
                   <tr>
                        <td>@Html.DisplayNameFor(per => per.id_autor)</td>
                       <td>@Html.DisplayNameFor(per => per.nombre)</td>
                       <td>@Html.DisplayNameFor(per => per.apellido)</td>
                       <td>@Html.DisplayNameFor(per => per.nacionalidad)</td>
                   </tr>
               </thead>
               <tbody>
                   @foreach (var reg in Model)
                    {
                        <tr>
                            <td>@reg.id_autor</td>
                            <td>@reg.nombre</td>
                            <td>@reg.apellido</td>
                            <td>@reg.nacionalidad</td>
                            <td>
                                <a asp-controller="Autor" asp-action="Edit" asp-route-id="@reg.id_autor"
                                    class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>

                                <a asp-controller="Personal" asp-action="Delete" asp-route-id="@reg.id_autor"
                                   class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i> Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>



</div>

<footer class="bg-success text-light py-4">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="m-0">Elaborado por Diego Levano</p>
            </div>
        </div>
    </div>
</footer>